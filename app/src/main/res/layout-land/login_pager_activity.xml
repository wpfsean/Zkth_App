<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/login_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="360.3dp"
        android:layout_marginTop="71.7dp"
        android:src="@mipmap/login_picture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="75.3dp"
        android:layout_toRightOf="@+id/login_icon_layout"
        android:text="执勤哨位信息终端"
        android:textColor="@color/white"
        android:textScaleX="1.2"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="180dp"
        android:layout_marginLeft="336dp"
        android:layout_marginTop="105dp"
        android:background="@mipmap/login_windowbackgroud"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="29dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:gravity="left"
                android:text="用户名"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/edit_username_layout"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/edittext_white_bg" />


            <CheckBox
                android:id="@+id/auto_login_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动登录"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="16.7dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:gravity="left"
                android:text="密码"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/edit_userpass_layout"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/edittext_white_bg" />


            <CheckBox
                android:id="@+id/remember_pass_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginTop="16.7dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="24dp"
                android:gravity="left"
                android:text="服务器地址"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/edit_serviceip_layout"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="12dp"
                android:background="@drawable/edittext_white_bg" />

            <CheckBox
                android:id="@+id/remembe_serverip_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改地址"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16.7dp">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/userlogin_button_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_login_selected" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/userlogin_button_cancel_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_login_cancel_selected" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/login_progressbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone" />

</RelativeLayout>